{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listFiles": false,
    "isolatedModules": false,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "pretty":true
  },
  "include":[
    "app/**/*.ts",
    "server.ts",
    "public/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
